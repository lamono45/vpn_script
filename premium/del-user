#!/bin/bash

read -p "ğŸ—‘ï¸ Masukkan username yang ingin dihapus: " user

if [[ -f /etc/xray/user/$user.json ]]; then
  rm -f /etc/xray/user/$user.json
  sed -i "/^### $user /d" /etc/xray/vless.json
  sed -i "/^### $user /d" /etc/xray/vmess.json
  echo "âœ… User $user berhasil dihapus."
  systemctl restart xray
else
  echo "âŒ User $user tidak ditemukan."
fi
